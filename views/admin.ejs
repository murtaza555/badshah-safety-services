                    <textarea name="item_description_input" id="item_description_input" cols="50" rows="5" class="7" style="resize: none;"></textarea>


                    <label for="item_image_input" style="margin-top: 2%;">Image:</label>
                    <!-- <input type="text" name="item_rate_input" class="item_name_input" id="item_rate_input"> -->
                    <input class="img_product" type="file" name="img_product" id="img_product" accept="image/jpeg ,image/jpg ,image/png ,image/webp" />



