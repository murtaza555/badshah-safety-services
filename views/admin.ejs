                    <label for="item_specification_input" style="margin-top: 2%;">Specifications:</label>
                    <input type="text" name="item_spec1_input" class="item_name_input" id="item_spec1_input" placeholder="Spec. Name">
                    <input type="text" name="item_spec2_input" class="item_name_input" id="item_spec2_input" placeholder="Spec. Value">
                    <div style="width: 100%;justify-content: center;
                    text-align: center;
                    margin-top: 1%;">
                        <button class="btn_addSpecification" id="btn_addSpecification">Add Specs..</button>
                    </div>
                    <div class="div_specification" id="div_specification"></div>



