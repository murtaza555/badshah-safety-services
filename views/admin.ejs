                    <div class="div_size_object" id="div_tags_object"></div>


                    <label class="switch">
    <input type="checkbox" id="checkbox_status">
    <span class="slider round"></span>
  </label><span style="margin-left:10px;margin-top: 2px;">Add to Recent</span>

